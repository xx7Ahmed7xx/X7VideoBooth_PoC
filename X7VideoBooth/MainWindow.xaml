<Window x:Class="VideoBooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Booth by MrX7 😉" 
        Height="680" Width="990"
        MinHeight="680" MinWidth="990">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="Camera:" VerticalAlignment="Center" Margin="0,0,23,0"/>
                    <ComboBox x:Name="CmbCams" Width="220" Margin="0,0,16,0"/>
                    <TextBlock Text="Mic:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CmbMics" Width="220" Margin="0,0,16,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Resolution:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CmbRes" Width="220" Margin="0,0,16,0" SelectionChanged="CmbRes_SelectionChanged"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="FPS:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="CmbFps" Width="80" Margin="0,0,8,0" SelectionChanged="CmbFps_SelectionChanged"/>
                        <TextBlock Text="Duration:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="DurationBox" Width="75" Margin="0,0,16,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Button x:Name="BtnStartPreview" Content="Preview" Width="80" Margin="0,0,8,0" Click="BtnStartPreview_Click"/>
                        <Button x:Name="BtnStopPreview"  Content="Stop"    Width="80" Margin="0,0,8,0" Click="BtnStopPreview_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnSnap"         Content="Snapshot" Width="80" Margin="0,0,16,0" Click="BtnSnap_Click"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Button x:Name="BtnRecStart" Content="Start Rec" Width="90" Margin="0,0,8,0" Click="BtnRecStart_Click"/>
                        <Button x:Name="BtnRecStop"  Content="Stop Rec"  Width="90" Margin="0,0,8,0" Click="BtnRecStop_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="List Devices" Width="90" Margin="0,0,8,0" Click="BtnListDevices_Click"/>
                        <Button Content="Valid Modes"  Width="90" Margin="0,0,8,0" Click="BtnListModes_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Video preview -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Background="#000">
            <Grid>
                <!-- Bottom layer: live preview -->
                <Image x:Name="PreviewImage" Stretch="Uniform"/>

                <!-- Top layer: semi-transparent overlay + countdown text -->
                <Border x:Name="CountdownOverlay"
                Background="#66000000"
                Visibility="Collapsed"
                IsHitTestVisible="False">
                    <TextBlock x:Name="Countdown"
                       Text=""
                       Foreground="White"
                       FontSize="72"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Log output -->
        <Border Grid.Row="2" Margin="0,10,0,0" BorderBrush="#444" BorderThickness="1">
            <TextBox x:Name="LogBox"
                     FontFamily="Consolas"
                     FontSize="12"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </Border>

        <!-- Bottom status bar: lamps + timer + status text -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="LampPreview" Width="12" Height="12" Fill="Gray" Stroke="Black" StrokeThickness="0.5"/>
                    <TextBlock Text=" Preview" Margin="6,0,12,0"/>
                    <Ellipse x:Name="LampRecord" Width="12" Height="12" Fill="Gray" Stroke="Black" StrokeThickness="0.5"/>
                    <TextBlock Text=" Recording" Margin="6,0,12,0"/>
                    <TextBlock Text="|" Margin="6,0,6,0"/>
                    <TextBlock Text="Length:"/>
                    <TextBlock x:Name="LblRecTime" Text="00:00" FontFamily="Consolas" Margin="6,2,0,0"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="LblStatus" Text="Idle"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
